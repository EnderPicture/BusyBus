    <corners
        android:bottomLeftRadius="0dp"
        android:radius="40dp" />

    <solid
        android:color="@color/colorAccent" />


    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="82dp"
        android:height="82dp" />

